<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/exo_edit_mode_background_color"
    tools:context="com.example.sang.mplayer.FavActivity">


    <TextView
        android:id="@+id/tv_fav_header_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/favourites_count_label"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_fav_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_fav_header_label"
        app:layout_constraintTop_toBottomOf="@+id/tv_fav_header_label" />

    <TextView
        android:id="@+id/tv_fav_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="0"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_fav_header_label"
        app:layout_constraintStart_toEndOf="@+id/tv_fav_header_label"
        app:layout_constraintTop_toTopOf="@+id/tv_fav_header_label"
        android:layout_marginLeft="5dp" />
</android.support.constraint.ConstraintLayout>
